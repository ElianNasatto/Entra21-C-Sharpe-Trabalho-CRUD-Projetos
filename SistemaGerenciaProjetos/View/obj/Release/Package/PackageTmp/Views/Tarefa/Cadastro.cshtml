
@{
    ViewBag.Title = "Cadastro";
}

<title>Cadastro de Tarefa</title>
<div class="container">
    <h2 class="display-4 mt-3 mb-3">Cadastro de Tarefa</h2>
    <form action="/tarefa/insert" method="post">
        <div>
            <label for="campo-usuario">Usuario Responsavel</label>
            <select class="form-control" name="usuario" id="campo-usuario" required="">
                <option disabled="disabled" selected="selected">Selecione um Usuario</option>
                @foreach (Model.Usuario Usuario in ViewBag.Usuarios)
                {
                    <option value="@Usuario.Id">@Usuario.Nome</option>
                }
            </select>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="campo-projeto">Projeto</label>
                <select class="form-control" name="projeto" required="">
                    <option selected="selected" disabled="disabled" value="1">Selecione um Projeto</option>
                    @foreach (Model.Projeto Projeto in ViewBag.Projetos)
                    {
                        <option value="@Projeto.Id">@Projeto.Nome</option>
                    }
                </select>
            </div>
            <div class="col-6">
                <label for="campo-categoria">Categoria</label>
                <select class="form-control" name="categoria" id="campo-categoria" required="">
                    <option disabled="disabled" selected="selected">Selecione uma categoria</option>
                    @foreach (Model.Categoria Categoria in ViewBag.Categorias)
                    {
                        <option value="@Categoria.Id">@Categoria.Nome</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <label for="campo-titulo">Titulo</label>
                <input class="form-control" type="text" required="" name="titulo" id="campo-titulo" />
            </div>
            <div class="col-4">
                <label for="campo-duracao">Duração</label>
                <input class="form-control" type="date" required="" name="duracao" id="campo-duracao" />
            </div>
        </div>
        <div>
            <label for="campo-descricao">Descrição</label>
            <input class="form-control" type="text" required="" id="campo-descricao" name="descricao" />
        </div>
        <button class="btn btn-success mt-3" type="submit"><i class="fa fa-save"></i> Salvar</button>
    </form>
</div>

