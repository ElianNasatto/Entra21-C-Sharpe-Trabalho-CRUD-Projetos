
@{
    ViewBag.Title = "Cadastro";
}

<title>Cadastro de Categoria</title>
<div class="container">
    <h2 class="display-4 mt-3 mb-3">Cadastro de Categoria</h2>
    <form action="/categoria/store" method="post">
        <div>
            <label for="campo-nome">Nome</label>
            <input class="form-control" type="text" name="nome" id="campo-nome" required="" />
        </div>
        <button class="btn btn-success mt-3" type="submit"><i class="fa fa-save"></i> Salvar</button>
    </form>
</div>

