
@{
    ViewBag.Title = "Index";
}

<h2 class="display-4">Lista de Cidades</h2>

<title>Lista de Cidades</title>
<div>
    <a class="btn btn-primary float-right mb-3" href="/cidade/cadastro"><i class="fa fa-plus"></i> Cadastrar</a>
</div>
<table class="table table-bordered table-hover table-light table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Número de Habitantes</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Cidade cidade in ViewBag.Cidades)
        {
            <tr>
                <td>@cidade.Id</td>
                <td>@cidade.Nome</td>
                <td>@cidade.NumeroHabitantes</td>
                <td>
                    <a class="btn btn-info" href="/cidade/alterar?id=@cidade.Id"><i class="fa fa-edit"></i> Alterar</a>
                    <a class="btn btn-danger" href="/cidade/apagar?id=@cidade.Id"><i class="fa fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Número de Habitantes</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>