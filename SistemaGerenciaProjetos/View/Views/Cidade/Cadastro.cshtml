
@{
    ViewBag.Title = "Cadastro";
}

<h2 class="display-4 mt-3 mb-3">Cadastrando Cidade</h2>
<title>Cadastrando Cidade</title>
<form action="/cidade/store" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="campo-nome" required="" />
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <label for="campo-numerohabitantes">Número Habitantes</label>
                <input class="form-control" type="number" required="" id="campo-numerohabitantes" name="numeroHabitantes" />
            </div>
            <div class="col-6">
                <label for="campo-estado">Estado</label>
                <select name="estado" id="campo-estado" required="" class="form-control">
                    <option selected="" disabled="disabled">Selecione um estado</option>
                    @foreach (Model.Estado Estado in ViewBag.Estados)
                    {
                        <option value="@Estado.Id">@Estado.Nome</option>

                    }
                </select>
            </div>
        </div>
        <button class="btn btn-success float-left mt-3" type="submit"><i class="fa fa-save"></i> Salvar</button>
    </div>
</form>
