
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>
<form action="/usuario/update" method="post">
    <div>
        <div>
            <label for="campo-nome">Novo Nome</label>
            <input type="text" name="nome" id="campo-nome" required="" value="@ViewBag.Usuario.Nome"/>
        </div>
        <div>
            <label for="campo-login">Novo Login</label>
            <input type="text" name="login" id="campo-login" required="" value="@ViewBag.Usuario.Login" />
        </div>
        <div>
            <label for="campo-senha">Nova Senha</label>
            <input type="password" name="senha" id="campo-senha" required="" value=""/>
        </div>
        <input type="text" hidden="hidden" value="@ViewBag.Usuario.Id" name="id" />
        <button type="submit">Salvar</button>
    </div>

</form>

