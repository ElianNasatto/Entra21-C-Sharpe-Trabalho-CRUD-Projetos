
@{
    ViewBag.Title = "Index";
}

<title>Categorias</title>
<div class="container">
    <h2 class="display-4 mt-3 mb-3">Lista de Categorias</h2>
    <div>
        <a class="btn btn-outline-primary mb-3 float-right" href="/categoria/cadastro"><i class="fa fa-plus"></i> Cadastrar</a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </thead>


        <tbody>
            @foreach (Model.Categoria categoria in ViewBag.Categorias)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nome</td>
                    <td>
                        <a class="btn btn-outline-info" href="/categoria/editar?id=@categoria.Id"><i class="fa fa-edit"></i> Alterar</a>
                        <a class="btn btn-outline-danger" href="/categoria/apagar?id=@categoria.Id"><i class="fa fa-trash"></i> Apagar</a>
                    </td>

                </tr>
            }
        </tbody>


        <tfoot>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </tfoot>
    </table>
</div>