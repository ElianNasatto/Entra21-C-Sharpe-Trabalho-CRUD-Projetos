
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<title>Categorias</title>
<div>
    <a href="~/Views/Categoria/Cadastro"></a>
</div>
<a href="/categoria/cadastro">Inserir</a>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>


    <tbody>
        @foreach (Model.Categoria categoria in ViewBag.Categorias)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a href="/categoria/editar?id=@categoria.Id">Alterar</a>
                    <a href="/categoria/apagar?id=@categoria.Id">Apagar</a>
                </td>

            </tr>
        }
    </tbody>


    <tfoot>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>