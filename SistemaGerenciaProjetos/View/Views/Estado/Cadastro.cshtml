
@{
    ViewBag.Title = "Cadastro";
}

<h2 class="display-4">Cadastro</h2>

<form action="/estado/store" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div>
                    <div class="form-group">
                        <label for="campo-nome">Nome</label>
                        <input class="form-control" type="text" name="nome" id="campo-nome" required="" placeholder="Nome do Estado" />
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label for="campo-sigla">Sigla</label>
                        <input class="form-control" type="text" name="sigla" id="campo-sigla" required="" placeholder="Sigla do Estado" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-success float-right mr-3" type="submit">Salvar</button>
    </div>

</form>
