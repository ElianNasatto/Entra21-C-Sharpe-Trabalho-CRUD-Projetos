
@{
    ViewBag.Title = "Inserir";
}

<title>Inserindo cliente</title>
<div class="container">
    <h2 class="display-4 mb-3 mt-3 ml-3">Inseririndo cliente</h2>
    <form action="/cliente/insert">
        <div>
            <label for="campo-nome">Nome</label>
            <input class="form-control" type="text" name="nome" id="campo-nome" required="" maxlength="50" />
        </div>
        <div class="row">
            <div class="col-6">
                <label for="campo-cpf">CPF</label>
                <input class="form-control" type="text" required="" id="campo-cpf" name="cpf" maxlength="11" />
            </div>
            <div class="col-6">
                <label for="campo-data-nascimento">Data Nascimento</label>
                <input class="form-control" type="date" id="campo-data-nascimento" name="dataNascimento" required="" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="campo-cidade">Cidade</label>
                <select class="form-control" name="cidade" id="campo-cidade" required="">
                    <option selected="" disabled="disabled">Selecione uma cidade</option>
                    @foreach (Model.Cidade Cidade in ViewBag.Cidades)
                    {
                        <option value="@Cidade.Id">@Cidade.Nome</option>

                    }
                </select>
            </div>
            <div class="col-3">
                <label for="campo-cep">Cep</label>
                <input class="form-control" type="text" required="" name="cep" id="campo-cep" maxlength="8" />
            </div>

            <div class="col-3">
                <label for="campo-numero">Numero</label>
                <input class="form-control" type="text" required="" name="numero" id="campo-numero" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="campo-complemento">Complemento</label>
                <input class="form-control" type="text" required="" name="complemento" id="campo-complemento" maxlength="10" />
            </div>
            <div class="col-6">
                <label for="campo-logradouro">Logradouro</label>
                <input class="form-control" type="text" required="" name="logradouro" id="campo-logradouro" maxlength="10" />
            </div>
        </div>

        <button class="btn btn-success mt-3" type="submit"><i class="fa fa-save"></i> Salvar</button>
    </form>
</div>
