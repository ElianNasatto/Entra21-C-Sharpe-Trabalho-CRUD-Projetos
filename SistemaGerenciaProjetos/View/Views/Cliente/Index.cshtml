
@{
    ViewBag.Title = "Index";
}

<!-- Tabela muito grande, tem que achar uma forma de fazer ela preencher tudo-->
<title>Clientes</title>
<div class="container-fluid">
    <h2 class="display-4 mt-3 mb-3">Lista de Clientes</h2>
    <div>
        <a class="btn btn-primary float-right mb-3" href="/cliente/inserir"><i class="fa fa-plus"></i> Adicionar Cliente</a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <td>Id</td>
                <td>Nome</td>
                <td>Cpf</td>
                <td>Data Nascimento</td>
                <td>Cidade</td>
                <td>Numero</td>
                <td>Complemento</td>
                <td>Logradouro</td>
                <td>Cep</td>
                <td width="215px">Ação</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Cliente Cliente in ViewBag.Clientes)
            {
                <tr>
                    <td>@Cliente.Id</td>
                    <td>@Cliente.Nome</td>
                    <td>@Cliente.Cpf</td>
                    <td>@Cliente.DataNascimento</td>
                    <td>@Cliente.Cidade.Nome</td>
                    <td>@Cliente.Numero</td>
                    <td>@Cliente.Complemento</td>
                    <td>@Cliente.Logradouro</td>
                    <td>@Cliente.Cep</td>
                    <td>
                        <a class="btn btn-info" href="/cliente/alterar?id=@Cliente.Id"><i class="fa fa-edit"></i> Alterar</a>
                        <a class="btn btn-danger" href="/cliente/apagar?id=@Cliente.Id"><i class="fa fa-trash"></i> Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="thead-dark">
            <tr>
                <td>Id</td>
                <td>Nome</td>
                <td>Cpf</td>
                <td>Data Nascimento</td>
                <td>Cidade</td>
                <td>Numero</td>
                <td>Complemento</td>
                <td>Logradouro</td>
                <td>Cep</td>
                <td>Ação</td>
            </tr>
        </tfoot>
    </table>

</div>